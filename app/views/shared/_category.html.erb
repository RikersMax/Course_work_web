<% categories.each do |category| %>
	<div class="card-categoryies">
		<figure>
			<%= image_tag(category.url_img, class: 'card-image') %>	
			<figcaption class="name-card"><%= t("category.#{category.name}") %></figcaption>				
		</figure>		
		
		<div class="footer-card">
			<div>
				<%= stars %>
			</div>
			<div>
				<%= category.service_categories.each {|ser_cat| ser_cat.service_star} %>
			</div>
		</div>
	</div>

<% end %>